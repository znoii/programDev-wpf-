<Window x:Class="IT_S.Views.EditedRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IT_S.Views"
        mc:Ignorable="d"
        Title="EditRequestWindow" FontSize="20" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            
            <TextBlock Text="Тип оборудования:"/>
            <TextBox x:Name="EquipBox" Width="300"/>
            <TextBlock Text="Модель:"/>
            <TextBox x:Name="ModelBox" Width="300"/>
            <TextBlock Text="Описание проблемы:"/>
            <TextBox x:Name="ProblemBox" Width="300"/>

            <TextBlock Text="Статус:"/>
            <ComboBox x:Name="StatusBox" Width="300">
                <ComboBoxItem Content="Новая"/>
                <ComboBoxItem Content="В ремонте"/>
                <ComboBoxItem Content="Завершена"/>
            </ComboBox>
        </StackPanel>
        <Button Content="Сохранить" Click="Save_Click" FontWeight="Black" Padding="10" VerticalAlignment="Bottom" Margin="30" />
    </Grid>
</Window>
