<UserControl x:Class="RepairReq.Windows.RegistrationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RepairReq.Windows"
                          mc:Ignorable="d" 
                          d:DesignHeight="450" d:DesignWidth="600" Background="WhiteSmoke">
    <Grid Grid.Row="2" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Column="0" >
            <StackPanel>
                <TextBlock Text="Please create your login and password" HorizontalAlignment="Center" Margin="0,100,0,0"/>

                <TextBlock Text="Login" HorizontalAlignment="Center" Margin="10" />
                <TextBox x:Name="LoginTextbox" Width="75"/>



                <TextBlock Text="Password" HorizontalAlignment="Center" Margin="10"/>
                <TextBox x:Name="PasswordTextbox" Width="75"/>

                <TextBlock Text="RegDate" HorizontalAlignment="Center" Margin="10"/>
                <DatePicker x:Name="RegDatePicker"/>

            </StackPanel>
        </GroupBox>
        <GroupBox Grid.Column="1" >
            <StackPanel>

                <TextBlock Text="FullName" HorizontalAlignment="Center" Margin="0,100,0,10"/>
                <TextBox x:Name="FullNameTextbox" Width="75"/>

                <TextBlock Text="PhoneNumber" HorizontalAlignment="Center" Margin="10"/>
                <TextBox x:Name="PhoneNumberTextbox" Width="75"/>


                <Button Click="OnLoginClick" Width="100" Height="20" Margin="15" Content="Enter"/>
                <Button Click="OnRegistrationClick" Width="100" HorizontalAlignment="Right" Height="20" Margin="20" Content="Autorization" Background="Transparent"/>

            </StackPanel>
        </GroupBox>

    </Grid>
</UserControl>

