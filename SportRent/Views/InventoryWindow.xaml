<Window x:Class="SportRent.Views.InventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportRent.Views"
        mc:Ignorable="d"
        Title="Инвентарь" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Название:"/>
            <TextBox x:Name="NameTextBox"/>

            <TextBlock Text="Описание:"/>
            <TextBox x:Name="DescriptionTextBox"/>

            <TextBlock Text="Размер:"/>
            <TextBox x:Name="SizeTextBox"/>

            <TextBlock Text="Цена за час:"/>
            <TextBox x:Name="PriceTextBox"/>

            <CheckBox x:Name="IsAvailableCheckBox" Content="Доступен"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Сохранить" Width="100" Click="Save_Click"/>
                <Button Content="Отмена" Width="100" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
