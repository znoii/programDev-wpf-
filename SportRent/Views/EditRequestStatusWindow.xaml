<Window x:Class="SportRent.Views.EditRequestStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportRent.Views"
        mc:Ignorable="d"
        Title="Изменение статуса" Height="200" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Выберите статус:" FontSize="18" Margin="5"/>
            <ComboBox x:Name="StatusComboBox" Height="30" Margin="5"/>
            <Button Content="Сохранить" Click="SaveButton_Click" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
