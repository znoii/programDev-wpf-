<Window x:Class="SportRent.Views.RequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportRent.Views"
        mc:Ignorable="d"
        Title="RequestWindow" Height="450" Width="800" FontSize="18" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Инвентарь:" />
            <TextBlock x:Name="InventoryNameText" FontWeight="Bold" />

            <TextBlock Text="Ожидаемая дата возврата:" Margin="10"/>
            <DatePicker x:Name="ReturnDatePicker"/>

            <Button Content="Подтвердить" Click="ConfirmRequest_Click" Width="150" Margin="10" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
