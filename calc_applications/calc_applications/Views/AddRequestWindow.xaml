<Window x:Class="calc_applications.Views.AddRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:calc_applications.Views"
        mc:Ignorable="d"
        Title="AddRequestWindow" FontSize="20" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="ФИО:"/>
            <TextBox x:Name="FullNameBox" Width="300"/>

            <TextBlock Text="Статус:"/>
            <ComboBox x:Name="StatusBox" Width="300">
                <ComboBoxItem Content="Новая"/>
                <ComboBoxItem Content="В работе"/>
                <ComboBoxItem Content="Закрыта"/>
            </ComboBox>

            <Button Content="Сохранить" Click="Save_Click" FontSize="20" FontWeight="Black" Margin="30" Padding="5"/>
        </StackPanel>
    </Grid>
</Window>
