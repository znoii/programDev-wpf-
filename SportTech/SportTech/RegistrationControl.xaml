<UserControl x:Class="SportTech.RegistrationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SportTech"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="320" Background="White">
    <Grid>
        <StackPanel>
            <TextBlock Text="Please create your login and password" HorizontalAlignment="Center" Margin="20"/>

            <TextBlock Text="Login" HorizontalAlignment="Center" Margin="10" />
            <TextBox x:Name="LoginTextbox" Width="75"/>

           
            
            <TextBlock Text="Password" HorizontalAlignment="Center" Margin="10"/>
            <TextBox x:Name="PasswordTextbox" Width="75"/>

            <TextBlock Text="вводим год/месяц/день" HorizontalAlignment="Center" Margin="3"/>

            <TextBlock Text="RegDate" HorizontalAlignment="Center" Margin="10"/>
            <TextBox x:Name="RegDateTextbox" Width="75"/>

            <TextBlock Text="FullName" HorizontalAlignment="Center" Margin="10"/>
            <TextBox x:Name="FullNameTextbox" Width="75"/>

            <TextBlock Text="PhoneNumber" HorizontalAlignment="Center" Margin="10"/>
            <TextBox x:Name="PhoneNumberTextbox" Width="75"/>


            <Button Click="OnLoginClick" Width="100" Height="20" Margin="20" Content="Enter"/>
            <Button Click="OnRegistrationClick" Width="100" HorizontalAlignment="Right" Height="20" Margin="20" Content="Autorization" Background="Transparent"/>
        </StackPanel>

    </Grid>
</UserControl>
