<Window x:Class="carserv.Windows.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:carserv.Windows"
        mc:Ignorable="d"
        Title="EmployeeWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Выбрать ответственного" Margin="10"/>
            <ComboBox x:Name="EmployeeComboBox" DisplayMemberPath="FullName"/>
            <Button Content="Назначить" Click="AssignClick" 
                Margin="0,20,0,0" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
